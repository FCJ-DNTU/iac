{
  "user": [
    {
      "type": "allow",
      "actions": [
        "users:getUser",
        "users:getTasks",
        "users:deleteTask",
        "users:getTask",
        "users:addTask",
        "users:updateTask"
      ],
      "resources": ["users:*", "tasks:*"]
    },
    {
      "type": "deny",
      "actions": [
        "tasks:getTasks",
        "tasks:deleteTask",
        "tasks:getTask",
        "tasks:addTask",
        "tasks:updateTask"
      ],
      "resources": ["tasks:*"]
    }
  ]
}
